{% extends 'base.html.twig' %}

{% block title %}{{ 'security.login.lost_password.title'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1>{{ 'security.login.lost_password.title'|trans }}</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>{{ 'security.login.lost_password.content'|trans }}</small>
            </div>

            <button class="btn btn-primary">{{ 'resetting.request.submit'|trans }}</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}