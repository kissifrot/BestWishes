{% extends 'base.html.twig' %}

{% block title %}{{ 'category.title.edit'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        {% set category = form.vars.value %}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('list_show', { id: category.list.id } ) }}">{{ category.list.name }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('category_show', { id: category.id } ) }}">{{ category.name }}</a></li>
                <li class="breadcrumb-item active">{{ 'category.title.edit'|trans }}</li>
            </ol>
        </nav>

        <h1>{{ 'category.title.edit'|trans }}</h1>
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.save) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
