{% extends 'base.html.twig' %}

{% block title %}{{ 'category.title.create'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('list_show', { id: list.id } ) }}">{{ list.name }}</a></li>
                <li class="breadcrumb-item active">{{ 'category.title.create'|trans }}</li>
            </ol>
        </nav>

        <h1>{{ 'category.title.create'|trans }}</h1>
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.save) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
