{# messages types <-> classes association #}
{% set messagesTypes = {'success': 'success', 'notice': 'primary', 'error': 'danger'} %}

{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashBag.all() %}
        {% for message in messages %}
            <div class="alert alert-dismissible alert-{{ messagesTypes[type] }}">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'global.close'|trans }}"></button>
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
