{% extends 'base.html.twig' %}

{% block title %}Category - {{ category.name }}{% endblock %}

{% block content %}
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('list_show', { id: category.list.id } ) }}">{{ category.list.name }}</a></li>
            <li class="active">{{ category.name }}</li>
        </ol>
        <h1>{{ category.name }}</h1>

        {%- include '@App/default/flash_messages.html.twig' -%}

        {% if category.gifts is not empty %}
            <div class="list-group">
            {% for gift in category.gifts %}
                <a href="{{ path('gift_show', { id: gift.id }) }}" class="list-group-item">
                    {{ gift.name }}
                </a>
            {% endfor %}
            </div>
        {% else %}
            <p><em>No gifts found</em></p>
        {% endif %}
        <a href="#" class="btn btn-primary">Delete</a>
        <a href="{{ path('gift_create', { catId: category.id }) }}" class="btn btn-primary">Create a gift</a>
        <a href="{{ path('gift_create', { catId: category.id, surprise: true }) }}" class="btn btn-primary">Create a surprise gift</a>
    </div>
{% endblock %}
