{% extends 'base.html.twig' %}

{% block title %}Category - {{ category.name }}{% endblock %}

{% block content %}
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('list_show', { id: category.list.id } ) }}">{{ category.list.name }}</a></li>
            <li class="active">{{ category.name }}</li>
        </ol>
        <h1>{{ category.name }}</h1>

        {%- include '@App/default/flash_messages.html.twig' -%}

        {% if category.gifts is not empty %}
            <div class="list-group">
            {% for gift in category.gifts %}
                <a href="{{ path('gift_show', { id: gift.id }) }}" class="list-group-item">
                    {{ gift.name }}
                </a>
            {% endfor %}
            </div>
        {% else %}
            <p><em>No gifts found</em></p>
        {% endif %}
            <div class="hidden-xs">
            {% include '@App/category/show_actions.html.twig' with {category: category} only %}
            </div>
        </div>

    {% include '@App/category/confirm_modals.html.twig' with {deleteForm: deleteForm} only %}
{% endblock %}

{% block footer %}
<nav class="navbar navbar-default navbar-fixed-bottom visible-xs-block">
    {% include '@App/category/show_actions_footer.html.twig' with {category: category} only %}
</nav>
{% endblock %}

{% block javascripts_footer %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.js-cat-delete').click(function () {
                $('#modal-confirm-delete').modal();
            });
        });
    </script>
{% endblock %}
