<div class="btn-group btn-group-lg btn-group-justified" role="group" aria-label="Actions">
{% if is_multi_granted(['ONWER', 'EDIT'], category.list) %}
    <a href="{{ path('category_edit', { id: category.id }) }}" class="btn btn-primary" title="Edit" aria-label="Edit">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    <div class="btn-group btn-group-lg" role="group" aria-hidden="true">
        <button class="btn btn-primary js-cat-delete" title="Delete" aria-label="Delete">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
    </div>
    <a href="{{ path('gift_create', { catId: category.id }) }}" class="btn btn-primary" title="Create a gif" aria-label="Create a gif">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        <span class="glyphicon glyphicon-gift" aria-hidden="true"></span>
    </a>
{% endif %}
{% if is_granted('SURPRISE_ADD', category.list) %}
    <a href="{{ path('gift_create', { catId: category.id, surprise: true }) }}" class="btn btn-primary" title="Create a surprise gif" aria-label="Create a surprise gif">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
        <span class="glyphicon glyphicon-gift" aria-hidden="true"></span>
    </a>
{% endif %}
</div>
