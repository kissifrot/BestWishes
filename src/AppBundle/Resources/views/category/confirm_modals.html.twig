<div id="modal-confirm-delete" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{ form_start(deleteForm) }}
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'category.modal.close.text'|trans }}"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{{ 'category.modal.confirmation.text'|trans }}</h4>
            </div>
            <div class="modal-body">
                <p>{{ 'category.modal.delete_confirmation.text'|trans }}<br>{{ 'category.modal.delete_confirmation.text.second_line'|trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'category.modal.close.text'|trans }}</button>
                <button type="submit" class="btn btn-primary">{{ 'category.modal.confirm.text'|trans }}</button>
            </div>
            {{ form_end(deleteForm) }}
        </div>
    </div>
</div>
