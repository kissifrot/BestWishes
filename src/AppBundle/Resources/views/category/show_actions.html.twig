{% if is_multi_granted(['ONWER', 'EDIT'], category.list) %}
    <a href="{{ path('category_edit', { id: category.id }) }}" class="btn btn-primary">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;{{ 'category.action.edit'|trans }}
    </a>
    <button class="btn btn-primary js-cat-delete">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp;{{ 'category.action.delete'|trans }}
    </button>
    <a href="{{ path('gift_create', { catId: category.id }) }}" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        <span class="glyphicon glyphicon-gift" aria-hidden="true"></span>&nbsp;
        {{ 'category.action.create_gift'|trans }}
    </a>
{% endif %}
{% if is_granted('SURPRISE_ADD', category.list) %}
    <a href="{{ path('gift_create', { catId: category.id, surprise: true }) }}" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
        <span class="glyphicon glyphicon-gift" aria-hidden="true"></span>&nbsp;
        {{ 'category.action.create_surprise_gift'|trans }}
    </a>
{% endif %}
