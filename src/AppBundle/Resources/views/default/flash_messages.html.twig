{# messages types <-> classes association #}
{% set messagesTypes = {'notice': 'success', 'error': 'danger'} %}

{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashBag.all() %}
        {% for message in messages %}
            <div class="alert alert-dismissible alert-{{ messagesTypes[type] }}">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
